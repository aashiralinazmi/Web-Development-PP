@model IEnumerable<OOAD_PROJECT.Models.ActivityLog>

@{
    ViewBag.Title = "ViewActivityLog";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Customer Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Customer Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            DataTable Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.columnName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Activity)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.columnName)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Activity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.columnName)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

